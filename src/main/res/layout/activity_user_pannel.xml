<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_pannel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/completewhite"
    android:orientation="vertical"
    tools:context="in.edamus.root.stake.userPannel">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Stake"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"

        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/playground"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splayground"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:text="Back"
                android:fontFamily="serif-monospace"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:layout_margin="5dp"
                android:text="Opponent Color: White "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:layout_margin="5dp"
                android:text="Choose your color: "/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_margin="10dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/colora"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/colorb"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/colorc"
                    android:layout_margin="5dp"
                    android:background="@android:color/black"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/colord"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark"/>
            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/go"
                android:text="Go"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/completewhite"
                android:visibility="invisible"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splay"
            android:text="Single Player"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:background="@drawable/textview_design"
            android:layout_margin="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mplay"
            android:text="Multi-Player"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:background="@drawable/textview_design"
            android:layout_margin="30dp"/>
    </LinearLayout>
